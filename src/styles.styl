html, body {
  margin: 0;
  padding: 0;
  height: 100%;
}

html {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  font-size: 16px;
}

.App {
  padding: 1rem;

  > div {
    margin-bottom: 0.25rem;
  }

  > h1 {
    font-size: 1.75rem;
  }
}

.ViewContainer {
  font-family: monospace;
}

.Binary64 {
  display: flex;
  cursor: default;
  user-select: none;

  .BitsFragment {
    > div {
      font-size: 0.75em;
    }

    padding: 0.5em;
  }
}

.Bits {
  display: flex;
  align-self: flex-end;

  .Bit {
    display: flex;
    flex-direction: column;
    // justify-content: center;
    align-items: center;
    width: 1.5em;
    border: 1px solid black;
    box-sizing: border-box;

    sub {
      color: #777;
      font-size: 0.75rem;
      font-style: italic;
    }
  }

  .Bit + .Bit {
    border-left: none;
  }
}

.Sign {
  background-color: #D5FFFF;
}

.Exponent {
  background-color: #A4FFB4;
}

.Significand {
  background-color: #FFB2B5;
}
